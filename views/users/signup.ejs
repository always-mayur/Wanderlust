<% layout("./layouts/boilerplate") %>

<body>
<div class="row ">
    <h2 class="col-6 offset-2">Sign-Up</h2>
    <br><br>
    <div class="col-6 offset-2">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" 
                name="username" id="username"  class="form-control" required>
                <div class="valid-feedback">
                    username Looks good!
                </div>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" 
            name="email" id="email"  class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" 
        name="password" id="password"  class="form-control" required>
</div>

<button class="btn btn-dark add-btn mt-3">SignUp</button>
        </form>
    </div>
</div>
</body>